# Example configuration file for Whonix VirtualBox MCP
# Copy this file to config.ini and modify as needed

[virtualbox]
# Path to VBoxManage executable
# Windows: C:\Program Files\Oracle\VirtualBox\VBoxManage.exe
# macOS: /Applications/VirtualBox.app/Contents/MacOS/VBoxManage
# Linux: /usr/bin/VBoxManage
vboxmanage_path = /usr/bin/VBoxManage

[whonix]
# Names of your Whonix VMs
gateway_vm = Whonix-Gateway-Xfce
workstation_vm = Whonix-Workstation-Xfce

# Default credentials for VM access
# WARNING: Change these from the defaults for security!
default_username = user
default_password = changeme

[tor]
# Tor service ports (usually defaults)
socks_port = 9050
control_port = 9051

[logging]
# Logging configuration
log_level = INFO
log_file = whonix_mcp.log
max_log_size = 10485760  # 10MB in bytes
backup_count = 5
