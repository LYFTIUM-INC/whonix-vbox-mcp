# Secure Browser Server Configuration
# Copy this file to .env and update with your values

# ============================================
# SERVER CONFIGURATION
# ============================================
BROWSER_SERVER_PORT=9230
# SECURITY: Always bind to localhost only in production
BROWSER_SERVER_HOST=127.0.0.1

# ============================================
# AUTHENTICATION
# ============================================
# Comma-separated list of API keys (generate with: openssl rand -hex 32)
API_KEYS=your-secure-api-key-here,another-api-key-here
REQUIRE_AUTH=true

# ============================================
# SESSION MANAGEMENT
# ============================================
MAX_SESSIONS=10
SESSION_TIMEOUT=1800000  # 30 minutes in milliseconds

# ============================================
# SECURITY SETTINGS
# ============================================
# JavaScript execution is disabled by default for security
ENABLE_JS_EXECUTION=false

# Comma-separated list of allowed domains (empty = all allowed)
ALLOWED_DOMAINS=example.com,*.example.org

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=/var/log/browser-server/secure.log

# ============================================
# PATHS
# ============================================
SCREENSHOT_DIR=/var/browser-screenshots
TEMP_DIR=/tmp/browser-server

# ============================================
# WHONIX VM CREDENTIALS
# ============================================
# NEVER commit actual credentials to version control!
WHONIX_VM_USERNAME=user
WHONIX_VM_PASSWORD=your-secure-password-here

# Default VMs (can be overridden)
WHONIX_GATEWAY_VM=Whonix-Gateway-Xfce
WHONIX_WORKSTATION_VM=Whonix-Workstation-Xfce

# ============================================
# TOR CONFIGURATION
# ============================================
TOR_SOCKS_PORT=9050
TOR_CONTROL_PORT=9051
TOR_CONTROL_PASSWORD=your-tor-control-password

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# VIRTUALBOX CONFIGURATION
# ============================================
VBOX_MANAGE_PATH=/usr/bin/VBoxManage